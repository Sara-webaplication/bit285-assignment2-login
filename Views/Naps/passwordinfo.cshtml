@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model bit285_assignment2_login.Models.User
@{
    Layout = "_Layout";
    ViewBag.Title = "Password Info";
}
<h1>Password Information</h1>
<fieldset>
    <form asp-action="PasswordInfo">
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="BirthYear"></label>
            <input asp-for="BirthYear" />
            <span asp-validation-for="BirthYear"></span>
        </div>
        <div>
            <label asp-for="FavoriteColor"></label>
            <input asp-for="FavoriteColor" />
            <span asp-validation-for="FavoriteColor"></span>
        </div>

        <div>
            <input type="submit" value="Suggest Password" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>
