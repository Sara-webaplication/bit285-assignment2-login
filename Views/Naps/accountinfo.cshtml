@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model bit285_assignment2_login.Models.User
@{
    Layout = "_Layout";
    ViewBag.Title = "Account Info";
 }
<h1>New Account Information</h1>
<fieldset>
    <form asp-action="AccountInfo">
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>
        </div>
        <div>
            <label asp-for="Program"></label>
            <select asp-for="Program">
                <option>Web App Dev</option>
                <option>Mobile App Dev</option>
                <option>Front-end Dev</option>
            </select>
            <span asp-validation-for="Program"></span>
        </div>
        <div>
            <input type="submit" value="Create Password" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>
